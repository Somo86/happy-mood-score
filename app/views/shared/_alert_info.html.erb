<% type = local_assigns[:type] || 'notice' %>
<div class="rounded-md bg-<%= alert_color(type) %>-50 p-4">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-<%= alert_color(type) %>-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm leading-5 font-medium text-<%= alert_color(type) %>-800">
        <%= title %>
      </h3>
      <p class="mt-2 text-sm leading-5 text-<%= alert_color(type) %>-700">
        <%= message %>
        </p>
        <div class="mt-4 text-sm">
      <%= yield %>
        </div>
    </div>
  </div>
</div>
