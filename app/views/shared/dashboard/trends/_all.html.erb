<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-center">
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-lg leading-5 font-medium text-gray-500 truncate lg:ml-12">
            <%= title %>
          </dt>
          <dd class="flex items-baseline">
            <p class="text-2xl leading-8 font-semibold text-gray-900 lg:text-4xl">
            <%= total %>
            </p>
            <%= render 'shared/dashboard/trends/period', total_period: total_period, total_period_text: total_period_text %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="bg-gray-50 px-4 py-4 sm:px-6">
    <div class="text-sm leading-5">
      <a href=<%=  view_all_link  %>
      class="font-medium text-indigo-600 hover:text-indigo-500 transition ease-in-out duration-150">
      <%= t 'rightDashboard.viewAll' %>
      </a>
    </div>
  </div>
</div>
