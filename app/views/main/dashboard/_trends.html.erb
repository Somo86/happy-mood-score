<div class="mt-6">
  <h3 class="text-lg leading-6 font-medium text-gray-900">
    <%=  t 'userTrends.engagement'  %>
  </h3>
  <div class="mt-4 grid grid-cols-1 gap-5 sm:grid-cols-3">
    <%= render 'shared/dashboard/trends', title: t('userTrends.high5Received'), value: @dashboard[:trends][:high5_received][:total], trend_value: @dashboard[:trends][:high5_received][:variation], trend_title: t('userTrends.high5ReceivedWeek') %>
    <%= render 'shared/dashboard/trends', title: t('userTrends.high5Given'), value: @dashboard[:trends][:high5_given][:total], trend_value: @dashboard[:trends][:high5_given][:variation], trend_title: t('userTrends.high5GivenWeek') %>
    <%= render 'shared/dashboard/trends', title: t('userTrends.feedbackComments'), value: @dashboard[:trends][:comments][:total], trend_value: @dashboard[:trends][:comments][:variation], trend_title: t('userTrends.commentsWeek') %>
  </div>
</div>
