<% current_employee = current_user.employee %>
  <div class="flex-shrink-0 flex border-t border-gray-200 p-4">
    <a href="#" data-action="sidebar#toggleUserMenu" class="flex-shrink-0 w-full group block">
      <div class="flex items-center">
        <div>
          <%= employee_avatar(current_employee) %>
        </div>
        <div class="ml-3">
          <p class="text-sm leading-5 font-medium text-gray-700 group-hover:text-gray-900">
          <%= current_employee.name %>
          </p>
          <p class="text-xs leading-4 font-medium text-gray-500 group-hover:text-gray-700 transition ease-in-out duration-150">
          <%= "#{current_employee.level_name} - #{current_employee.points} #{t('topUser.points')}" %>
          </p>
        </div>
      </div>
    </a>
  </div>
