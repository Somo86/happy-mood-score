    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h2 class="text-2xl font-bold leading-7 text-orange-900 sm:text-3xl sm:leading-9 sm:truncate">
          <%=  @company.name  %>
        </h2>
      </div>
      <div class="mt- flex md:mt-0 md:ml-4">
        <div class="mr-4">
          <span class="rounded-md shadow-sm">
            <%= link_to t('companyShow.backToShow'), admin_company_url(current_user.company), class: "inline-flex items-center font-medium text-indigo-600 hover:text-indigo-500 transition ease-in-out duration-150" %>
          </span>
        </div>
      </div>
    </div>
    <div class="mt-6 bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-lg leading-5 font-medium text-red-800">
                <%= t 'companyDeleteAccount.deleteAccount'  %>
              </h3>
              <p class="mt-2 text-sm leading-5 text-red-700">
                <%= t 'companyDeleteAccount.sadNews'  %> <%= link_to t('companyDeleteAccount.contactUs'), new_contact_url, class: "inline-flex items-center font-medium text-red-600 hover:text-red-500 transition ease-in-out duration-150" %>
              </p>
            </div>
          </div>
        </div>
        <div class="mt-4">
          <%= tw_form_with model: [:admin, @company], method: :delete, class: "px-10 py-4", data: { turbo: false } do |form| %>
            <%= form.text_input :confirm, autofocus: true, label: t('companyDeleteAccount.deleteWord'), message: t('companyDeleteAccount.undone') %>
            <%# formInput name="confirm-text" type="text" autofocus=true required=true showInvalid=invalidName labelMessage=(t 'companyDeleteAccount.deleteWord') hintText=(t 'companyDeleteAccount.undone') errorText=(t 'companyDeleteAccount.confirmationText') %>
            <div class="mt-4">
              <button type="submit"
                class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-500 focus:outline-none focus:border-red-700 focus:shadow-outline-red active:bg-red-700 transition ease-in-out duration-150">
                <%= t 'companyDeleteAccount.deleteMyAccount'  %>
              </button>
            </div>
            <% end %>
        </div>
        <p class="mt-4 text-sm leading-6 font-medium text-gray-700"><%= t 'companyDeleteAccount.thankYou'  %></p>
      </div>
    </div>
