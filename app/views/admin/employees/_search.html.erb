<div class="mt-6 bg-white shadow overflow-hidden sm:rounded-md">
  <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
    <div class="ml-4 mt-2">
      <div class="flex-1 flex">
        <%= form_with url: search_admin_employees_url, method: :post, class: "w-full" do %>
          <div class="w-full flex md:ml-0">
            <label for="search_field" class="sr-only">
              <%= t 'addEmployee.searchLabel' %>
            </label>
            <div class="relative w-full text-gray-400 focus-within:text-gray-600">
              <div class="absolute inset-y-0 left-2 flex items-center pointer-events-none">
                <button type="submit">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" />
                </svg>
                </button>
              </div>
              <input id="search_field" name="name" autofocus class="search block w-full h-full pl-8 pr-3 py-2 rounded-md text-gray-900 placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 sm:text-sm" type="search" placeholder=<%= t 'addEmployee.search' %> data-search-target="name" data-action="input->search#update" />
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
